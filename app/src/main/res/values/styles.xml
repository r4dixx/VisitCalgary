<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <!-- App bar style -->
    <style name="AppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Removes the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Style for tabs -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorCategoryBackground</item>
        <item name="tabTextColor">@color/colorTabText</item>
        <item name="tabSelectedTextColor">@color/colorTabTextSelected</item>
        <item name="tabIndicatorColor">@color/colorTabIndicator</item>
    </style>

</resources>
